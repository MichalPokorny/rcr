#!/usr/bin/ruby

if ARGV[0] == "-i" || ARGV[0] == "--interactive"
	require 'kgr/gui/classify-letter'
	gui = KGR::GUI::ClassifyLetter.new("/home/prvak/rocnikac/kgr-data/trained/letter-classifier")
	gui.run
else
	require 'kgr/letter-classifier/neural'
	require 'kgr/data/image'
	classifier = KGR::LetterClassifier::Neural.load("/home/prvak/rocnikac/kgr-data/trained/letter-classifier")
	classifier.classify(KGR::Data::Image.load(ARGV[0]))
end
